$('.notice').html('')

<% if @answer.persisted? %>
	$('.new-answer .answer-errors').html('')
	$('.answers table').append('<%= j render @answer %>')
	$('.new-answer #answer_body').val('')
	$('.notice').html('<%= notice %>')
<% else %>
	$('.new-answer .answer-errors').html('<%= render 'shared/errors', resource: @answer %>')
<% end %>
