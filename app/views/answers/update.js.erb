$('.notice').html('')

<% if @answer.errors.present? %>
	$('.answers #answer-<%= @answer.id %> .answer-errors').html('<%= render 'shared/errors', resource: @answer %>')
<% else %>
	$('.answers #answer-<%= @answer.id %> .answer-errors').html('')
	$('.answers #answer-<%= @answer.id %> .answer-body').show()
	$('.answers #answer-<%= @answer.id %> .answer-body').html('<%= j @answer.body %>')
	$('.answers #answer-<%= @answer.id %> .answer-files').html('<%= j render @answer.files if @answer.files.attached? %>')
	$('.answers #answer-<%= @answer.id %> form.edit-answer-form').hide()
	$('.answers #answer-<%= @answer.id %> form.edit-answer-form input[type="hidden"][name="answer[append_files][]"]').remove()
	$('.answers #answer-<%= @answer.id %> form.edit-answer-form #answer_append_files').val(null)
	$('.answers #answer-<%= @answer.id %> form.edit-answer-form #answer_append_files').prop('disabled', false)
	$('.answers #answer-<%= @answer.id %> .remove-attachment-link').hide()
	$('.answers #answer-<%= @answer.id %> td.balancing-column').remove()
	$('.notice').html('<%= notice %>')
	$('.answers .edit-answer-link[data-answer-id="<%= @answer.id %>"]').show()
<% end %>
