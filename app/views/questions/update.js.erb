$('.notice').html('')

<% if @question.errors.present? %>
	$('.question .question-errors').html('<%= render 'shared/errors', resource: @question %>')
<% else %>
	$('.question question-errors').html('')
	$('.question .question-title').show()
	$('.question .question-title').html('<%= j @question.title %>')
	$('.question .question-body').show()
	$('.question .question-body').html('<%= j @question.body %>')
	$('.question .question-files').html(
		'<%= j sanitize @question.files.map { |file| content_tag :div, (link_to short_filename(file), url_for(file)) }.join('') %>'
		)
	$('.question form').hide()
	$('.notice').html('<%= notice %>')
	$('.question .edit-question-link').show()
<% end %>
