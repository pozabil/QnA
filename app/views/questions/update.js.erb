$('.notice').html('')

<% if @question.errors.present? %>
	$('.question .question-errors').html('<%= render 'shared/errors', resource: @question %>')
<% else %>
	$('.question question-errors').html('')
	$('.question .question-title').show()
	$('.question .question-title').html('<%= j @question.title %>')
	$('.question .question-body').show()
	$('.question .question-body').html('<%= j @question.body %>')
	$('.question .question-files').html('<%= j render @question.files if @question.files.attached? %>')
	$('.question form').hide()
	$('.question form input[type="hidden"][name="question[append_files][]"]').remove()
	$('.question form #question_append_files').val(null)
	$('.question form #question_append_files').prop('disabled', false)
	$('.question .remove-attachment-link').hide()
	$('.notice').html('<%= notice %>')
	$('.question .edit-question-link').show()
<% end %>
